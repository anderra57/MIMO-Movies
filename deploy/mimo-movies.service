[Unit]
Description="MIMO Movies App"

[Service]
ExecStart=/usr/bin/docker run -p 80:3000 -p 3306:3306 anderpri/mimo-movies:app-amd64-mysql
ExecStop=/usr/bin/docker stop $(/usr/bin/docker ps -q --filter ancestor=anderpri/mimo-movies:app-amd64-mysql)
Type=simple
Restart=always

[Install]
WantedBy=multi-user.target